{
    "version": 2,
    
    "functions": {
        "api/*.php": { "runtime": "vercel-php@0.7.2", "includeFiles": [
        "app/**",
        "bootstrap/**",
        "config/**",
        "database/**",
        "public/**",
        "resources/views/**",
        "routes/**",
        "vendor/**"
      ] }
        
    },
    "routes": [
        {
            "src": "/(css|js|build|assets|storage|images)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
    }
